@model Category
<form method="post">
    <div class="mt-4" asp-validation-summary="All"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <button class="btn btn-primary" style="width: 100px" type="submit">Actualizar Categoria</button>
        <a class="btn btn-secondary" asp-asp-controller="Category" asp-action="Index" style="width: 100px">Cancelar</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}